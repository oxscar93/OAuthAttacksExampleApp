extends layout

block content
  .container
  h2 Register Page
  if (error && error.length > 0)
    br
    h4.error-msg=error
    br
  br
  form(role='form', action="/users", method="post", style='max-width: 300px;')
    .form-group
      input.form-control(type='text', name="name", placeholder='Enter Name')
    .form-group
      input.form-control(type='text', name="username", placeholder='Enter Username')
    .form-group
      input.form-control(type='password', name="password", placeholder='Enter Password')
    .form-group
      input.form-control(type='password', name="passwordrepeat", placeholder='Enter Password again')
    .form-group
      input.form-control(type='text', name="email", placeholder='Enter email')
    button.btn.btn-default(type='submit') Submit
    &nbsp;
    a(href='/')
      button.btn.btn-primary(type="button") Cancel
